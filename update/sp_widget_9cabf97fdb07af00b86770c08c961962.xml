        <client_script><![CDATA[function($scope, $log, $http, $window, $q, $anchorScroll, apiRoot) {
	/* widget controller */
	var c = this;
	c.fields = c.data.fields;
	c.form = getFormValues();
	c.ui = getUiValues();
	c.submit = submit;
	c.toggle = toggle;
	c.toggleOn = toggleOn;

	// begin dev props
	c.debug = true;
	c.log = function(obj) { $log.info(obj) };
	c.logScope = function() { c.log($scope) };
	// end dev props

	// clicks on first element which matches selector
	$scope.click = function(selector) { 
		document.querySelector(selector).click();
	}

	// sets country to 'US' if a US state is selected
	$scope.$watch('c.form.state', function(value, oldValue) {
		if (value != null && value != '')
			c.form.country = 'US';
	});

	// clears US state if US is deselected
	$scope.$watch('c.form.country', function(value, oldValue) {
		if (value != 'US')
			c.form.state = null;
	});

	function submit() {
		if ($scope.appForm.$invalid) {
			$('h1')[0].scrollIntoView();
			return false;
		}
		
		var endpoint = apiRoot + 'applicants';
		var formValues = parseForm(c.form);
		console.log(formValues);

		if (c.options.type == 'new') {
			createApplicant(formValues);
		}

		else if (c.options.type == 'update') {
			updateApplicant(formValues);
		}
	}

	function createApplicant(parameters) {
		var endpoint = apiRoot + 'applicants';
		$http.post(endpoint, parameters).then(function(response) {
			$log.info(response);
		})['catch'](function(error) {
			$log.error(error);
		});
	}

	function updateApplicant(parameters) {
		var endpoint = apiRoot + 'applicants';
		$http.put(endpoint, parameters).then(function(response) {
			$log.info(response);
		})['catch'](function(error) {
			$log.error(error);
		});
	}

	function parseForm(form) {
		var formValues = angular.copy(form);

		// delete any unused keys
		var ignoredKeys = [
			'scientific_focus_raw',
			'other_scientific_focus',
			'resume_filename',
			'references_filename'
		];

		ignoredKeys.forEach(function(key) {
			delete formValues[key];
		});

		// remove any entries that do not contain any values
		formValues.education = formValues.education.filter(hasNonNullProps)
		formValues.publications = formValues.education.filter(hasNonNullProps)

		return formValues;
	}
	
	function readFile(file) {
		return $q(function(resolve, reject) {
			var fileReader = new FileReader();
			
			fileReader.onload = function() {
				resolve(fileReader.result);
			}
			
			fileReader.onerror = function() {
				fileReader.abort();
				reject(fileReader.error);
			}
			
			fileReader.readAsDataURL(file);
		})
	}

	/**
	 * Returns true if an object has non-null properties
	 */
	function hasNonNullProps(obj) {
		for (var key in obj)
			if (obj[key] != null && obj[key] != '')
				return true;
		return false;
	}

	function toggle(item, list) {
		var idx = list.indexOf(item);
		if (idx > -1) {
			list.splice(idx, 1);
		}
		else {
			list.push(item);
		}
	}
	
	function toggleOn(item, list) {
		if (list.indexOf(item) == -1)
			list.push(item);
	}

	function getFormValues() {
		return {
			job_category: 3,
			scientific_focus_raw: {},
			other_scientific_focus: [],
			scientific_focus: [],
			first_name: null,
			middle_initial: null,
			last_name: null,
			email: null,
			email_2: null,
			address: null,
			address_2: null,
			city: null,
			state: null,
			postal_code: null,
			country: null,
			home_phone: null,
			work_phone: null,
			fax_phone: null,
			citizenship: undefined,
			num_publications: null,
			num_abstracts: null,
			num_presentations: null,
			research_interests: null,
			experience: null,
			referral_source: null,
			availability_date: null,
			education: [
				{institution: null, degree: null, major: null, year: null},
				{institution: null, degree: null, major: null, year: null},
				{institution: null, degree: null, major: null, year: null}
			],
			publications: [
				{journal: null, title: null, year: null},
				{journal: null, title: null, year: null},
				{journal: null, title: null, year: null}
			],
			resume_file: null,
			references_file: null,
			resume_file_input: null,
			references_file_input: null
		};
	}

	function getUiValues() {
		var role = c.data.role;
		var type = c.options.type;

		var isUser = role == 'admin' || role == 'user';
		var isApplicant = role == 'applicant' || role == null;

		var ui = {
			hidden: {
				email_2: type == 'new'
			},
			panels: [
				{
					title: 'Applicant Status',
					enabled: isUser && type == 'update',
					// this should be the first panel open for new private applications
					open: true
				},
				{
					title: 'Applicant Files',
					enabled: isUser && type == 'update',
					open: true
				},
				{
					title: 'Job Category',
					enabled: true,
					// this should be the first panel open for new public applications
					open: true
				},
				{
					title: 'Scientific Focus Areas',
					enabled: true,
					open: true
				},
				{
					title: 'Personal Information',
					enabled: true,
					open: true
				},
				{
					title: 'Education',
					enabled: true,
					open: true
				},
				{
					title: 'Publications',
					enabled: true,
					open: true
				},
				{
					title: 'Additional Questions',
					enabled: true,
					open: true
				},
				{
					title: 'CV/Resume',
					enabled: true,
					open: true
				}
			]
		};

		return ui;
	}

}]]></client_script>
